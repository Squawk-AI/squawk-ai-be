# ── Feature Flags ──
EMAIL_ENV="dev"                     # "dev" (no-op) or "prod" (sends emails)

# ── LLM API Keys ──
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
HUGGINGFACEHUB_API_TOKEN="hf_..."   # Only needed if using HuggingFace embeddings
TAVILY_API_KEY="tvly-..."           # Web search during research phase

# ── Monitoring ──
SENTRY_DSN=""                       # Optional — Sentry error tracking
ENVIRONMENT="development"           # "development" or "production"
RELEASE_VERSION="0.1.0"

# ── Supabase: Vector Store (aircraft manuals + past squawks) ──
SUPABASE_VS_URL="https://your-project.supabase.co"
SUPABASE_VS_KEY="your-anon-key"

# ── Supabase: Aircraft Overviews & Org Config ──
SUPABASE_OV_URL="https://your-project.supabase.co"
SUPABASE_OV_KEY="your-anon-key"

# ── Supabase: Conversation Logging ──
SUPABASE_CHAT_URL="https://your-project.supabase.co"
SUPABASE_CHAT_KEY="your-anon-key"

# ── LangSmith (LLM tracing / observability) ──
LANGSMITH_TRACING_V2=true
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY="lsv2_..."
LANGSMITH_PROJECT="squawkai"

# ── SMTP (diagnostic report emails) ──
SMTP_SERVER="smtp.example.com"
SMTP_PORT="587"
SMTP_USERNAME="user"
SMTP_PASSWORD="password"
SMTP_ADDRESS="reports@example.com"
